# syntax=docker/dockerfile:1.7

FROM node:20-alpine AS builder

WORKDIR /workspace/chat_app

COPY chat_app/package.json chat_app/package-lock.json ./
RUN npm ci

COPY chat_app/ ./
RUN npm run build

FROM nginx:1.27-alpine AS runtime

COPY docker/nginx/default.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /workspace/chat_app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
